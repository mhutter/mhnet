{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>mhutter/.github:renovate-config"
  ],
  "helm-values": { "fileMatch": ["\\.ya?ml$"] },
  "kubernetes": { "fileMatch": ["\\.ya?ml$"] },
  "regexManagers": [
    {
      "fileMatch": ["(^|/)kustomization\\.ya?ml$"],
      "matchStrings": [
        "\\shttps://github.com/(?<depName>.+?)/releases/download/(?<currentValue>.*)/"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["kubernetes/ingress-nginx"],
      "versioning": "regex:^controller-v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "ignoreTests": true
    }
  ]
}
